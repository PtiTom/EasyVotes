@model IEnumerable<EasyVotes.Models.SessionVote>
@{
	ViewData["Title"] = "Administration des Sessions";
}

<div class="text-center">
	<h1 class="display-4">Bonjour @User.Identity.Name</h1>
	<p>Vous pouvez prendre administrer les sessions suivantes :</p>
	@Html.ActionLink("Nouvelle Session", "AdminSession", "Vote", null, new { @class = "btn btn-primary" })
	<table class="table table-dark">
		<thead>
			<tr>
				<th scope="col">Sélectionner cette session</th>
				<th scope="col">Session</th>
				<th scope="col">Détails</th>
			</tr>
		</thead>
		@foreach (var session in Model)
		{
			string voteLabel = session.NombreQuestions > 1 ? "votes" : "vote";
			<tr>
				<td>@Html.ActionLink("☑", "AdminSession", "Vote", new { session.IdSessionVote })</td>
				<td>@session.NomSessionVote</td>
				<td>@session.NombreQuestions @voteLabel</td>
			</tr>
		}
	</table>
</div>
